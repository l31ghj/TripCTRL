datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      UserRole  @default(member)
  status    UserStatus @default(pending)
  trips     Trip[]
  tripShares TripShare[]
}

model Trip {
  id           String    @id @default(uuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id])
  title        String
  mainLocation String?
  startDate    DateTime
  endDate      DateTime
  notes        String?
  imagePath    String?
  planning     Json?    @default("{}")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  segments     Segment[]
  attachments Attachment[]
  shares      TripShare[]

  @@index([userId, startDate])
}

enum SegmentType {
  accommodation
  transport
  activity
  note
}

enum TransportMode {
  flight
  train
  bus
  taxi
  rideshare
  drive
}

model Segment {
  id               String        @id @default(uuid())
  tripId           String
  trip             Trip          @relation(fields: [tripId], references: [id])
  type             SegmentType
  transportMode    TransportMode?
  title            String?
  attachments     Attachment[]
  startTime        DateTime
  endTime          DateTime?
  location         String?
  provider         String?
  confirmationCode String?
  details          Json?
  sortOrder        Int?
  flightNumber     String?
  seatNumber       String?
  passengerName    String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([tripId, startTime])
}

model Attachment {
  id           String   @id @default(uuid())
  tripId       String?
  segmentId    String?
  trip         Trip?    @relation(fields: [tripId], references: [id])
  segment      Segment? @relation(fields: [segmentId], references: [id])
  path         String
  originalName String
  mimeType     String?
  size         Int?
  createdAt    DateTime @default(now())

  @@index([tripId])
  @@index([segmentId])
}

model TripShare {
  id          String         @id @default(uuid())
  tripId      String
  userId      String
  permission  TripPermission
  createdAt   DateTime        @default(now())
  trip        Trip            @relation(fields: [tripId], references: [id])
  user        User            @relation(fields: [userId], references: [id])

  @@unique([tripId, userId])
  @@index([userId])
}

enum UserRole {
  admin
  manager
  member
}

enum UserStatus {
  pending
  active
  rejected
}

enum TripPermission {
  owner
  edit
  view
}
